<?xml version="1.0" encoding="utf-8"?>
<chooongg.box.core.widget.square.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="?colorSurface"
    android:elevation="8dp"
    android:foreground="?selectableItemBackground">

    <chooongg.box.core.widget.square.SquareConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="parent" />

    </chooongg.box.core.widget.square.SquareConstraintLayout>

</chooongg.box.core.widget.square.SquareCardView>