<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">

    <fade android:interpolator="@android:interpolator/accelerate_cubic">
        <targets>
            <target android:excludeId="@android:id/content" />
        </targets>
    </fade>

    <slide android:slideEdge="end">
        <targets>
            <target android:excludeId="@android:id/statusBarBackground" />
            <target android:excludeId="@+id/activity_box_toolbar" />
            <target android:excludeId="@+id/navigation_view" />
            <target android:excludeId="@android:id/navigationBarBackground" />
        </targets>
    </slide>

</transitionSet>