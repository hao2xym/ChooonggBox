<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoxWidget.Toolbar.Primary" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="subtitleTextAppearance">?attr/textAppearanceCaption</item>
        <item name="maxButtonHeight">?attr/actionBarSize</item>
        <item name="elevation">@dimen/toolbarElevation</item>
    </style>

    <style name="BoxWidget.Toolbar.Surface" parent="@style/Widget.MaterialComponents.Toolbar.Surface">
        <item name="subtitleTextAppearance">?attr/textAppearanceCaption</item>
        <item name="maxButtonHeight">?attr/actionBarSize</item>
        <item name="elevation">@dimen/toolbarElevation</item>
    </style>

    <style name="BoxWidget.Toolbar.PrimarySurface" parent="@style/Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="subtitleTextAppearance">?attr/textAppearanceCaption</item>
        <item name="maxButtonHeight">?attr/actionBarSize</item>
        <item name="elevation">@dimen/toolbarElevation</item>
    </style>

    <style name="ShapeAppearanceImage" />

    <style name="ShapeAppearanceImage.Rounded" parent="ShapeAppearanceImage">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceImage.Rounded.4dp" parent="ShapeAppearanceImage.Rounded">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceImage.Rounded.8dp" parent="ShapeAppearanceImage.Rounded">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceImage.Rounded.12dp" parent="ShapeAppearanceImage.Rounded">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceImage.Rounded.16dp" parent="ShapeAppearanceImage.Rounded">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceImage.Circle" parent="ShapeAppearanceImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>