<?xml version="1.0" encoding="utf-8"?>
<chooongg.box.core.widget.square.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/d2"
    app:cardCornerRadius="@dimen/d4">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/view_mask_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/d56"
        android:layout_height="@dimen/d56"
        android:layout_gravity="center"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_picker_player" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:background="#55000000" />

    <FrameLayout
        android:id="@+id/btn_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/contentSmall">

        <TextView
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d28"
            android:background="@drawable/shape_picker_check_checked"
            android:gravity="center"
            android:minWidth="@dimen/d28"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </FrameLayout>

</chooongg.box.core.widget.square.SquareCardView>